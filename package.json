{
  "name": "logtailer",
  "displayName": "LogTailer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:logs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logtailer-explorer",
          "title": "LogTailer",
          "icon": "$(file-text)"
        }
      ]
    },
    "views": {
      "logtailer-explorer": [
        {
          "id": "logs",
          "name": "Logs"
        }
      ]
    },
    "commands": [
      {
        "command": "logs.add",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "logs.remove",
        "title": "Remove",
        "icon": "$(notifications-clear)"
      },
      {
        "command": "logs.removeAll",
        "title": "Remove All",
        "icon": "$(notifications-clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "logs.add",
          "when": "view == logs",
          "group": "navigation"
        },
        {
          "command": "logs.removeAll",
          "when": "view == logs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "logs.remove",
          "when": "view == logs",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
